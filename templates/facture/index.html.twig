{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <h1>Facture index</h1>




    <table class="table">
        <thead>

            <tr>
                <th>Id</th>
                <th>Num_Facture</th>
                <th>Type_Fact</th>
                <th>Date_Lim_Pay</th>
                <th>Net_Apayer</th>
                <th>Anc_Index</th>
                <th>Nouv_Inedx</th>
                <th>Estimation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.NumFacture }}</td>
                <td>{{ facture.TypeFact }}</td>
                <td>{{ facture.DateLimPay ? facture.DateLimPay|date('Y-m-d') : '' }}</td>
                <td>{{ facture.NetApayer }}</td>
                <td>{{ facture.AncIndex }}</td>
                <td>{{ facture.NouvInedx }}</td>
                <td>{{ facture.Estimation }}</td>
                <td>
                    <a href="{{ path('app_facture_show', {'id': facture.id}) }}">show</a>
                    <a href="{{ path('app_facture_edit', {'id': facture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_facture_new') }}">Create new</a>
{% endblock %}

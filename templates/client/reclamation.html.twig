{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
      <div class="navbar">
        <div class="navbar-brand">Portail SONEDE</div>
        {% if app.user %}
            <a href="{{ path('logout') }}">Déconnexion</a>
        {% endif %}
    </div>
    <div class="card">
        <div class="card-body">
    
            <h1 class="card-title">Nouvelle Réclamation</h1>
            {% if form_errors(form) %}
                <div class="alert alert-danger">{{ form_errors(form) }}</div>
            {% endif %}
            <form id="reclamationForm" action="{{ path('createreclamation') }}" method="post">
                {{ form_row(form._token) }}
                <div class="form-group">
                    <label for="{{ form.typeReclamation.vars.id }}">Type de Réclamation</label>
                    {{ form_widget(form.typeReclamation, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    <label for="{{ form.branchement.vars.id }}">Branchement</label>
                    {{ form_widget(form.branchement, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <div class="form-group">
                    <label for="{{ form.commentaire.vars.id }}">Commentaire</label>
                    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Valider</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}

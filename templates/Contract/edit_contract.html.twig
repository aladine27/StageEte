{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edit Contract</h1>

    {{ form_start(form) }}
    {{ form_row(form.client) }}
    {{ form_row(form.Num_Contrat) }}
    {{ form_row(form.Periode) }}
    {{ form_row(form.Type_Facture) }}
    {{ form_row(form.Date_limite_paiement) }}
    {{ form_row(form.NetAPayer) }}
    <button type="submit">Update Contract</button>
    {{ form_end(form) }}

    <a href="{{ path('contracts') }}">Back to Contracts</a>
{% endblock %}
